#include<iostream>
#include <stdio.h>
using namespace std;

int main()
{
    int i, j, n;
    cin>>n;
    for(i=0;i<n;i++){
        for(j=0;j<=i;j++){
            cout<<j<<"\t";
        }
        cout<<"\n";
    }
    

    return 0;
}
